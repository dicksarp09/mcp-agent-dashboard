{
  "dashboard": {
    "id": null,
    "title": "MCP Student Analytics - AI Performance",
    "tags": ["mcp", "ai", "llm", "cost"],
    "timezone": "browser",
    "schemaVersion": 36,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Total LLM Cost (USD)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(llm_cost_usd_total)",
            "legendFormat": "Total Cost"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 4,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Total Tokens Used",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(llm_tokens_used_total)",
            "legendFormat": "Tokens"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "fixed", "fixedColor": "purple"}
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Avg Cost per Query",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(llm_cost_usd_total) / sum(agent_queries_total{query_type=\"single_student\"})",
            "legendFormat": "Avg Cost"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 6
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Queries per Minute",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(agent_queries_total[5m])) * 60",
            "legendFormat": "Queries/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "LLM Cost Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (model) (llm_cost_usd_total)",
            "legendFormat": "{{model}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "Token Usage by Model",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (model) (llm_tokens_used_total)",
            "legendFormat": "{{model}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "Query Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (query_type) (agent_queries_total)",
            "legendFormat": "{{query_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Cost per Model",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (model) (llm_cost_usd_total)",
            "legendFormat": "{{model}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12}
      },
      {
        "id": 9,
        "title": "Daily Cost Projection",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(llm_cost_usd_total) / (time() - (sum(llm_cost_usd_total) > 0)*0 + 1) * 86400",
            "legendFormat": "Daily (Est.)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 12}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    }
  }
}
